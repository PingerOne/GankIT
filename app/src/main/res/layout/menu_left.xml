<?xml version="1.0" encoding="utf-8"?>
<com.pinger.gankit.widget.theme.ColorRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/menuBackground">

    <LinearLayout
        android:id="@+id/ll_menu_top_container"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="80dp"
            android:background="?android:attr/selectableItemBackground"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="我是全联盟最骚的骚猪。"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_menu_bottom_container"
        android:layout_below="@+id/ll_menu_top_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video"
                style="@style/MenuStyle"
                android:text="视频"/>

            <TextView
                android:id="@+id/tv_gank"
                style="@style/MenuStyle"
                android:text="干货"/>

            <TextView
                android:id="@+id/tv_news"
                style="@style/MenuStyle"
                android:text="新闻"/>

            <TextView
                android:id="@+id/tv_fuli"
                style="@style/MenuStyle"
                android:text="福利"/>


            <TextView
                android:id="@+id/tv_about"
                style="@style/MenuStyle"
                android:text="关于"/>

            <TextView
                android:id="@+id/tv_share"
                style="@style/MenuStyle"
                android:text="分享"/>

            <TextView
                android:id="@+id/tv_setting"
                style="@style/MenuStyle"
                android:text="设置"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_menu_bottom_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="8dp"
            android:padding="12dp"
            android:text="主题"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="8dp"
            android:padding="12dp"
            android:text="退出"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</com.pinger.gankit.widget.theme.ColorRelativeLayout>
